{
    "manifest_version": 3,
    "version": "1.2",
    "name": "Crm Plus",
    "description": "Extens√£o CRM Plus",
    "author": "Tiago Dantas",
    "permissions": [
        "activeTab", 
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },

      "content_scripts": [
        {
          "matches": ["https://crmeducacional.crm2.dynamics.com/*"],
          "run_at": "document_end",
          "all_frames": true,
          "js": ["alteracoes.js"]
        }
      ],
      "background": {
        "service_worker": "background.js"
    }
}